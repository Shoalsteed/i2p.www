{% set i2pinstall_jar_hash     = 'c9879b8f69ea13c758672c2fa083dc2e0abb289e0fc9a55af98f9f1795f82659' %}
{% set i2psource_hash          = 'f53f34fbe23a8762e3786572751b301befb28288efb6b1042d4fc64c6610784f' %}
