{% set i2pinstall_jar_hash     = 'b9fe281f28971de674f35cba8c483037bf8ac2d96578cb34f5ee627239d03890' %}
{% set i2psource_hash          = '1d50831e72a8f139cc43d5584c19ca48580d72f1894837689bf644c299df9099' %}
{% set i2pupdate_hash          = 'c221a9aadac400697cc79a2202130d766359518aab565ad6e99d64f29b92ff83' %}
{% set i2p_android_hash        = '84dcdc33e1fb2f49040083c6449bf644cdf9eff3d55018904972d3748ad19457' %}
{% set i2p_macnative_hash      = '18cb22cfcc3cbe0cec150e89a394d1a35703cb508ed627ef48084b7ba7c90dde' %}

